<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3>Notification Schedule</h3>
    </div>
    <div class="card-body">
      <p><strong>Days of the Week:</strong> <%= @notification.days_of_week.join(", ").titleize %></p>
      <p><strong>Time:</strong> <%= @notification.hour %>:<%= @notification.minute.to_s.rjust(2, '0') %> <%= @notification.ampm %></p>

      <div class="d-flex gap-2">
        <%= link_to 'Edit Schedule', edit_notification_path(@notification), class: "btn btn-warning" %>
        <%= link_to 'Back to Dashboard', root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
